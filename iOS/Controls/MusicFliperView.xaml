<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:ProjectMato.iOS.Controls;assembly=ProjectMatoiOS" 
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ProjectMato.iOS.MusicFliperView" BackgroundColor="Transparent" VerticalOptions="CenterAndExpand" WidthRequest="{StaticResource Bound}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*">
			</ColumnDefinition>
			<ColumnDefinition Width="310">
			</ColumnDefinition>
			<ColumnDefinition Width="1*">
			</ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto">
			</RowDefinition>
			<RowDefinition Height="Auto">
			</RowDefinition>
		</Grid.RowDefinitions>
		 <RelativeLayout Grid.Column="1" Grid.Row="0">
      <local:EllipseView Color="White" HeightRequest="310" WidthRequest="310">
			</local:EllipseView>
			<controls:CircleImage HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="300" WidthRequest="300" Source="{Binding AlbumArt}"
                            RelativeLayout.YConstraint="{ConstraintExpression Type=Constant,Constant=5}"
                            RelativeLayout.XConstraint="{ConstraintExpression Type=Constant,Constant=5}">
			</controls:CircleImage>
		</RelativeLayout>

		<Grid Grid.Column="1" Grid.Row="1" BackgroundColor="Green">
			<Grid.RowDefinitions>
				<RowDefinition Height="2*">
				</RowDefinition>
				<RowDefinition Height="1*">
				</RowDefinition>
			</Grid.RowDefinitions>
			<Label Grid.Row="0" XAlign="Center" FontSize="28" YAlign="Center" Text="{Binding Title}"  LineBreakMode="TailTruncation" TextColor="{StaticResource PhoneForegroundBrush }">
			</Label>
			<Label Grid.Row="1" XAlign="Center" YAlign="Center" Text="{Binding Artist}" LineBreakMode="TailTruncation" TextColor="{StaticResource PhoneForegroundBrush}">
			</Label>
		</Grid>
	</Grid>
</ContentView>