<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMato.iOS.BackgroundFliperView">
  <Grid Padding="5,0" WidthRequest="150" HeightRequest="260">
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <Image  Aspect="AspectFit"  Source="{Binding Img}"/>
      <Label  Text="{Binding Title}"  FontSize="36"/>
      <Image Source="Icon/Check.png" WidthRequest="32"
             IsVisible="{Binding IsSel, Mode=TwoWay}">

      </Image>
    </Grid>
  </Grid>
</ContentPage>