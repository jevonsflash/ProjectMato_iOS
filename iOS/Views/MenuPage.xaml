<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ProjectMato.iOS.Controls;assembly=ProjectMatoiOS"
             x:Class="ProjectMato.iOS.MenuPage" Title="Mato" Icon="Icon/slideout.png">
  <StackLayout VerticalOptions="FillAndExpand">
    <controls:MenuTableView Intent="Menu" HasUnevenRows="True" RowHeight="58">
      <TableRoot>
        <TableSection>
          <controls:MenuCell ContentText="正在播放" ContentImage="Icon/headphone" Code="NowPlaying"  x:Name="NowPlaying" ></controls:MenuCell>
          <controls:MenuCell ContentText="列队" ContentImage="Icon/queue2" Code="Queue" x:Name="Queue" ></controls:MenuCell>
          <controls:MenuCell ContentText="音乐库" ContentImage="Icon/folder" Code="Library" x:Name="Library" ></controls:MenuCell>
          <controls:MenuCell ContentText="歌单" ContentImage="Icon/playlist" Code="Playlist"  x:Name="Playlist"></controls:MenuCell>
          <controls:MenuCell ContentText="设置" ContentImage="Icon/setting" Code="Setting"  x:Name="Setting"></controls:MenuCell>
          <controls:MenuCell ContentText="关于" ContentImage="Icon/help" Code="About" x:Name="About"></controls:MenuCell>
        </TableSection>
      </TableRoot>

    </controls:MenuTableView>

  </StackLayout>


</ContentPage>