<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="ProjectMato.iOS.PlaylistFunctionPage"
             BackgroundColor="Gray"
             HeightRequest="350"
             >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto">
      </RowDefinition>
      <RowDefinition>
      </RowDefinition>
      <RowDefinition Height="Auto">
      </RowDefinition>

    </Grid.RowDefinitions>

    <!--TitlePanel 包含应用程序的名称和页标题-->
    <StackLayout Grid.Row="0"
                 Padding="{StaticResource DefaultContentPadding}">
      <Label x:Name="LabelCreate" Text="添加歌单"
             FontSize="{StaticResource SubtitleFontSize}" LineBreakMode="NoWrap" />
    </StackLayout>

    <StackLayout
      Grid.Row="1"
      Padding="{StaticResource DefaultContentPadding}">
      <controls:ExtendedEntry Font="Large" Placeholder="请输入歌单名称" Text="{Binding PlaylistInfo.Title,Mode=TwoWay}"></controls:ExtendedEntry>
      <controls:ExtendedButton
             Text="提交"
             x:Name="SubmitButton"
             TextColor="White"
             HorizontalContentAlignment="Start"
             FontSize="Large"
             Command="{Binding SubmitCommand}"
             Clicked="SubmitButtonButton_OnClicked">
      </controls:ExtendedButton>
    </StackLayout>
    <Grid
      Grid.Row="2"
      BackgroundColor="{StaticResource PhoneAccentBrush}">
      <Button Text="取消"
              x:Name="CancelButton"
              TextColor="White"
              FontSize="Large"
              HorizontalOptions="Center"
              Clicked="Button_OnClicked"></Button>
    </Grid>
  </Grid>

</ContentView>
